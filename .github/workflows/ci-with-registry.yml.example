# CI/CD Pipeline with Docker Registry Push
# This is an EXAMPLE workflow that pushes to Docker Hub
# 
# To use this:
# 1. Rename to ci.yml (backup your current ci.yml first)
# 2. Add GitHub Secrets:
#    - DOCKER_USERNAME: Your Docker Hub username
#    - DOCKER_PASSWORD: Your Docker Hub password/token
# 3. Update DOCKER_REGISTRY with your Docker Hub username

name: CI/CD Pipeline with Registry

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]

env:
  PYTHON_VERSION: "3.11"
  DOCKER_IMAGE: heart-disease-api
  DOCKER_REGISTRY: your-dockerhub-username  # CHANGE THIS!

jobs:
  # Job 1: Linting (same as before)
  lint:
    name: Lint Code
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}
      
      - name: Install linting tools
        run: |
          python -m pip install --upgrade pip
          pip install ruff black
      
      - name: Run ruff linter
        run: ruff check src/ tests/ scripts/ --output-format=github
      
      - name: Check formatting with black
        run: black --check src/ tests/ scripts/

  # Job 2: Unit Tests (same as before)
  test:
    name: Run Tests
    runs-on: ubuntu-latest
    needs: lint
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}
      
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
      
      - name: Run tests with coverage
        run: |
          pytest tests/ -v --cov=src --cov-report=xml --cov-report=term-missing

  # Job 3: Train Model (same as before)
  train:
    name: Train Model
    runs-on: ubuntu-latest
    needs: test
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}
      
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
      
      - name: Download dataset
        run: python scripts/download_data.py
      
      - name: Train models
        run: python scripts/train.py
      
      - name: Upload model artifacts
        uses: actions/upload-artifact@v4
        with:
          name: model-artifacts
          path: |
            models/
            mlruns/
          retention-days: 7

  # Job 4: Build and Push Docker Image
  docker:
    name: Build and Push Docker Image
    runs-on: ubuntu-latest
    needs: train
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Download model artifacts
        uses: actions/download-artifact@v4
        with:
          name: model-artifacts
          path: .
      
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3
      
      # Login to Docker Hub (only on main branch)
      - name: Login to Docker Hub
        if: github.ref == 'refs/heads/main' && github.event_name == 'push'
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}
      
      # Build and push to Docker Hub (only on main)
      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          push: ${{ github.ref == 'refs/heads/main' && github.event_name == 'push' }}
          tags: |
            ${{ env.DOCKER_REGISTRY }}/${{ env.DOCKER_IMAGE }}:latest
            ${{ env.DOCKER_REGISTRY }}/${{ env.DOCKER_IMAGE }}:${{ github.sha }}
          cache-from: type=gha
          cache-to: type=gha,mode=max
          load: ${{ github.ref != 'refs/heads/main' || github.event_name != 'push' }}
      
      # Test Docker container (for PRs and non-main branches)
      - name: Test Docker container
        if: github.ref != 'refs/heads/main' || github.event_name != 'push'
        run: |
          docker run -d --name test-api -p 8000:8000 ${{ env.DOCKER_IMAGE }}:${{ github.sha }}
          sleep 10
          curl -f http://localhost:8000/health || exit 1
          docker stop test-api
      
      # Save Docker image as artifact (for backup)
      - name: Save Docker image
        run: |
          docker pull ${{ env.DOCKER_REGISTRY }}/${{ env.DOCKER_IMAGE }}:${{ github.sha }} || \
          docker tag ${{ env.DOCKER_IMAGE }}:${{ github.sha }} ${{ env.DOCKER_REGISTRY }}/${{ env.DOCKER_IMAGE }}:${{ github.sha }}
          docker save ${{ env.DOCKER_REGISTRY }}/${{ env.DOCKER_IMAGE }}:${{ github.sha }} | gzip > docker-image.tar.gz
      
      - name: Upload Docker image artifact
        uses: actions/upload-artifact@v4
        with:
          name: docker-image
          path: docker-image.tar.gz
          retention-days: 7

  # Job 5: Deploy to Kubernetes
  deploy:
    name: Deploy to Kubernetes
    runs-on: ubuntu-latest
    needs: docker
    if: github.ref == 'refs/heads/main' && github.event_name == 'push'
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Deployment info
        run: |
          echo "============================================"
          echo "âœ… Docker image pushed to Docker Hub!"
          echo "Image: ${{ env.DOCKER_REGISTRY }}/${{ env.DOCKER_IMAGE }}:${{ github.sha }}"
          echo "Latest: ${{ env.DOCKER_REGISTRY }}/${{ env.DOCKER_IMAGE }}:latest"
          echo "============================================"
          echo ""
          echo "To deploy on remote machine:"
          echo "1. SSH to remote machine"
          echo "2. Pull image: docker pull ${{ env.DOCKER_REGISTRY }}/${{ env.DOCKER_IMAGE }}:latest"
          echo "3. Load to Minikube: minikube image load ${{ env.DOCKER_REGISTRY }}/${{ env.DOCKER_IMAGE }}:latest"
          echo "4. Update deploy/k8s/deployment.yaml with image: ${{ env.DOCKER_REGISTRY }}/${{ env.DOCKER_IMAGE }}:latest"
          echo "5. Deploy: kubectl apply -f deploy/k8s/"

